#Challenge 2

print("Official test")
choice= random.randint(1,3)
if choice==1:
  print("what 1+1")
  print("1.1")
  print("2.2")
  print("3.3")
  vi=int(input("Pick one"))
  if vi> 3:
    print("no this choice")
  elif vi==2:
    print("correct")
elif choice==2:
  print("what 1*1")
  print("1.1")
  print("2.2")
  print("3.3")
  vi=int(input("Pick one"))
  if vi> 3:
    print("no this choice")
  elif vi==1:
    print("correct")
elif choice==3:
  print("what 1-1")
  print("1.0")
  print("2.2")
  print("3.3")
  vi=int(input("Pick one"))
  if vi> 3:
    print("no this choice")
  elif vi==1:
    print("correct")
sc.mainloop()










